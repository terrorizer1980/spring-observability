		<java.version>1.8</java.version>
		<resource.delimiter>@
		</resource.delimiter> <!-- delimiter that doesn't clash with Spring ${} placeholders -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>${java.version}</maven.compiler.source>
		<maven.compiler.target>${java.version}</maven.compiler.target>
		<main.basedir>${basedir}</main.basedir>
		<docs.main>${project.artifactId}</docs.main>
		<spring-observability.version>1.0.0-SNAPSHOT</spring-observability.version>

		<docs.resources.dir>${project.build.directory}/build-docs</docs.resources.dir>
		<docs.classes.dir>${project.build.directory}/build-docs-classes</docs.classes.dir>
		<refdocs.build.directory>${project.build.directory}/refdocs/</refdocs.build.directory>

		<!-- Spring docs and formatting-->
		<!-- TODO: We might have a cycle on this -->
		<spring-doc-resources.version>0.2.5</spring-doc-resources.version>
		<spring-asciidoctor-extensions-boot.version>0.6.0
		</spring-asciidoctor-extensions-boot.version>
		<spring-asciidoctor-extensions-block.version>0.6.0
		</spring-asciidoctor-extensions-block.version>
		<spring-javaformat.version>0.0.28</spring-javaformat.version>
		<spring-javaformat-checkstyle.version>0.0.28</spring-javaformat-checkstyle.version>
		<nohttp-checkstyle.version>0.0.7</nohttp-checkstyle.version>
		<disable.nohttp.checks>false</disable.nohttp.checks>

		<asciidoctorj-pdf.version>1.6.0</asciidoctorj-pdf.version>
		<asciidoctorj-diagram.version>2.1.2</asciidoctorj-diagram.version>
		<revision>${project.version}</revision>
		<asciidoctorj.version>2.5.4</asciidoctorj.version>
		<jruby-complete.version>9.2.19.0</jruby-complete.version>

		<!-- Sonar -->
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.jacoco.reportPath>${project.basedir}/../target/jacoco.exec
